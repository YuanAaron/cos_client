QPushButton[style_button="main"] {
	background: #0063e5;
	color: white;
	border-color: #0063e5;
}

QPushButton[style_button="main"]:hover {
	background: #006eff;
}

/*QListView*/
QAbstractItemView {
	border: none;
	border-top: 1px solid #dddddd;
}

QTableView::item, QTableWidget::item {
	border-bottom: 1px solid #dddddd;
}

QAbstractItemView::item {
	height: 30px;
}

QAbstractItemView::item:hover,
QAbstractItemView::item:selected {
	background-color: #66dddddd; /*00表示全透明，ff表示不透明*/
	color: blue;
}

/*设置滚动条*/
QScrollBar {
	border: none;
	background-color: transparent;
}

QScrollBar:horizontal {
	height: 6px;
}

QScrollBar:vertical {
	width: 6px;
}

/*滚动条的滑块*/
QScrollBar::handle {
	background: #aaaaaa;
	border-radius: 3px;
}

/*滚动条的上下箭头*/
QScrollBar::add-line, QScrollBar::sub-line {
	border: none;
}

/*设置进度条*/
QProgressBar {
	background: #edeffc;
	border-radius: 3px;
}

/*chunk是进度条实心部分*/
QProgressBar::chunk {
	background: #647bfc;
	border-radius: 3px;
}

/*QTableWidget 去掉每个标签页的边框*/
QTableWidget::pane {
	border: none;
}

/*设置分割器*/
/*在设计师界面将handleWidth改成2px*/
QSplitter::handle:horizontal {
	background-color: #dddddd;
}










