/*通用按钮设置*/
QPushButton{
	background: transparent;
	border: 1px solid #dddddd;
	border-radius: 5px;
	height: 28px;
	width: 56px;
}
QPushButton:hover{
	color:#1296db;
	border-color: #1296db;
}

QPushButton:disabled{
	background-color: #dddddd;
}

