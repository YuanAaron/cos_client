/*设置通用的QLineEdit*/
QLineEdit{
	border: 1px solid #cccccc;
	border-radius: 2px;/*圆角一般使用偶数进行设置*/
	selection-background-color: darkgray;
	height: 28px;
}
QLineEdit:hover{
	border-color: #1296db;
}

/*通用标签设置*/
QLabel{
	background-color: transparent;
}
